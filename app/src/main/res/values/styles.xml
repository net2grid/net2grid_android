<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SmartEssToolbar" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextStyleNormalXSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="TextStyleNormalXXSmallGrey">
        <item name="android:textSize">@dimen/text_size_xxsmall</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="TextStyleNormalXSmallGrey">
        <item name="android:textColor">@color/grey</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_details_times_small</item>
    </style>

    <style name="TextStyleNormalDetailsLarge" parent="TextStyleTitleBold">
        <item name="android:textSize">@dimen/text_details_times_large</item>
    </style>

    <style name="TextStyleNormalSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="TextStyleNormal">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="TextStyleNormalItalic">
        <item name="fontPath">fonts/Lato-Italic.ttf</item>
        <item name="android:textSize">@dimen/text_size_xmedium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyleNormalBlack">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="TextStyleTitleBold" parent="TextStyleNormal">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textSize">@dimen/text_size_slarge</item>
    </style>

    <style name="TextStyleEfficiencyValueLarge">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyleNormalWhite" parent="TextStyleNormal">
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:textColor">@color/grey_slight</item>-->
    </style>

    <style name="TextStyleTitleBoldSmall" parent="TextStyleTitleBold">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleTitleBoldXSmall" parent="TextStyleTitleBold">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>

    <style name="TextStyleTitleBoldxLarge" parent="TextStyleTitleBold">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextStyleTitleBoldLarge" parent="TextStyleTitleBold">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextStyleTitleBoldMedium" parent="TextStyleTitleBold">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextStyleTitleBoldColored" parent="TextStyleTitleBold">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ViewsNavigationStrapWithPadding">
        <item name="android:paddingTop">@dimen/register_inner_padding</item>
        <item name="android:paddingBottom">@dimen/register_inner_padding</item>
        <item name="android:paddingLeft">@dimen/large_side_margin</item>
        <item name="android:paddingRight">@dimen/large_side_margin</item>
    </style>

    <style name="TextAppearance.FoxAndCat" parent="android:TextAppearance">
        <item name="fontPath">fonts/Fox-Cat.ttf</item>
    </style>

    <style name="TextAppearance.Helvetica.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/Helvetica-Light.ttf</item>
    </style>

    <style name="TextAppearance.Helvetica.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/Helvetica-Light-Italic.otf</item>
    </style>

    <style name="TextAppearance.Helvetica.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Helvetica-Bold.otf</item>
    </style>

    <style name="TextAppearance.Helvetica" parent="android:TextAppearance">
        <item name="fontPath">fonts/Helvetica.ttf</item>
    </style>

</resources>
