<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="nl.wittig.net2grid.onboarding.fragments.ResolvingNetworkFragment">

    <LinearLayout
        android:id="@+id/fragment_resolving_network_loading_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/fragment_resolving_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.Helvetica.Light"
            android:text="@string/connecting_with_smartbridge"/>

        <com.bhargavms.dotloader.DotLoader
            android:id="@+id/fragment_resolving_network_dotloader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:color_array="@array/dot_colors"
            app:dot_radius="15dp"
            app:number_of_dots="3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_resolving_network_completed_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.Helvetica.Light"
            android:text="@string/connected"/>
    </LinearLayout>

</FrameLayout>
