<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#213b4c"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_below="@id/fragment_connect_title"
                android:id="@+id/fragment_wrong_network_connected_subtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_wrong_network_connected_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:text="@string/wrong_network_title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:text="@string/wrong_network_subtitle"/>

            </LinearLayout>

            <ImageView
                android:layout_below="@id/fragment_wrong_network_connected_subtitles"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_wifi_blue" />

        </RelativeLayout>

    </ScrollView>


    <FrameLayout
        android:id="@+id/fragment_wrong_network_connected_goto_wifi_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1a2d3b"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.Helvetica.Light"
            android:textColor="#fff"
            android:textStyle="normal"
            android:text="@string/goto_wifi_settings"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_back_white" />

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
