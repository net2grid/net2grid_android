<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_connect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#213b4c"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/fragment_connect_frame_title_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/fragment_intro_connection_title_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/icon_cross_white"/>

                    <TextView
                        android:id="@+id/fragment_connect_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/fragment_intro_connection_title_icon"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAppearance="@style/TextAppearance.Helvetica.Light"
                        android:text="Connect with SmartBridge"/>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_below="@id/fragment_connect_frame_title_image"
                android:id="@+id/fragment_connect_qr_code"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/onboarding_qr" />

            <LinearLayout
                android:layout_below="@id/fragment_connect_qr_code"
                android:id="@+id/fragment_connect_subtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:text="@string/meda_open_wifi_settings_step_first"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:text="@string/meda_open_wifi_settings_step_second"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:text="@string/meda_open_wifi_settings_step_third"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:text="@string/meda_open_wifi_settings_step_fourth"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:text="@string/meda_open_wifi_settings_step_fifth"/>

            </LinearLayout>

            <FrameLayout
                android:layout_below="@id/fragment_connect_subtitles"
                android:id="@+id/fragment_connect_goto_wifi_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1a2d3b"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginStart="32dp"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:textAppearance="@style/TextAppearance.Helvetica.Light"
                    android:textStyle="normal"
                    android:text="Go to WiFi settings"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_back_white" />

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
